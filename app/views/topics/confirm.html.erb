<div class = "container">
  <div class = "col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <br>
    <h5 style = "text-decoration:underline">確認</h5>
    <%= form_for(@topic)do |f| %>
      <%= hidden_field_tag :"cache[topicimage]",@topic.topicimage.cache_name %>
      <%= f.hidden_field :content %>
      <br>
      <%= image_tag(@topic.topicimage.url) %>
      <br>
      <br>
      <p>本文<br /><%= @topic.content %></p>
      <br>
      <%= f.submit "送信",class:'btn btn-default btn-sm' %>
      <br>
      <br>
    <% end %>

    <%= form_for(@topic,url: new_topic_path,method: 'get') do |f| %>
      <%= f.hidden_field :content %>
      <%= f.submit "戻る", name: 'back',class:'btn btn-default btn-sm' %>
    <% end %>
  </div>
</div>
